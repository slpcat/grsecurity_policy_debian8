role www-data u
role_allow_ip	0.0.0.0/32
subject /  {
	/				h
	/etc/ld.so.cache		r
	/lib/x86_64-linux-gnu	rx
	-CAP_ALL
	bind	disabled
	connect	disabled
}

subject /etc/init.d o {
	/				h
	/etc/ld.so.cache		r
	/lib/x86_64-linux-gnu	rxi
	/run		rw
	/srv		r
	/data   r
	/var/www            r
	-CAP_ALL
	bind 10.0.2.137/32:8055 stream tcp
	connect 127.0.0.1/32:3306 stream tcp
  sock_allow_family ipv6
}

