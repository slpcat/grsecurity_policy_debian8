role zabbix u
role_allow_ip   0.0.0.0/32
subject /  {
    /               h
    -CAP_ALL
    bind    disabled
    connect disabled
}

subject /usr/sbin/zabbix_agentd o {
    /
    /boot               h
    /dev                h
    /dev/null           r
    /dev/urandom            r
    /etc                h
    /etc/zabbix/zabbix_agentd.conf
    /lib/modules            h
    /lib64/modules          h
    /proc               h
    /proc/stat          r
    /run                h
    /run/zabbix/zabbix_agentd.pid   wc
    /sys                h
    /sys/devices/system/cpu
    /usr                h
    /usr/share/zoneinfo     r
    /var                h
    /var/log/zabbix/zabbix_agentd.log   ra
    -CAP_ALL
    bind 10.0.2.251/32:10050 stream tcp
    connect disabled
}
