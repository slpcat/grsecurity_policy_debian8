    /etc/shadow         h
    /etc/shadow-            h
    /etc/ssh            h
    /home               h
    /home/hmuser        rwcd            
    /lib                rx
    /lib/modules            h
    /proc               
    /proc/bus           h
    /proc/kallsyms          h
    /proc/kcore         h
    /proc/modules           h
    /proc/slabinfo          h
    /proc/sys           h
    /sbin               h
    /sbin/pam-tmpdir-helper     x
    /usr                h
    /usr/bin            h
    /usr/bin/dircolors      x
    /usr/bin/perl           x
    /usr/lib            h
    /usr/lib/locale  r
    /usr/lib/x86_64-linux-gnu rx   
